# Multi-Bot RAG Platform Configuration
# Copy this file to .env and customize the values

# ================================
# Application Environment
# ================================
NODE_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/multi_bot_rag
POSTGRES_DB=multi_bot_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ================================
# Vector Store Configuration (Qdrant)
# ================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# ================================
# Security Configuration
# ================================
# IMPORTANT: Change this in production!
SECRET_KEY=your-very-long-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# LLM API Keys (Add your own)
# ================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# ================================
# File Storage Configuration
# ================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,docx,md,csv,json

# ================================
# Frontend Configuration
# ================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME=Multi-Bot RAG Platform
VITE_MAX_FILE_SIZE=10485760

# ================================
# CORS Configuration
# ================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# Email Configuration (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# ================================
# Monitoring and Analytics (Optional)
# ================================
SENTRY_DSN=
ANALYTICS_ENABLED=false

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# ================================
# Cache Configuration
# ================================
CACHE_TTL=3600  # 1 hour
EMBEDDING_CACHE_TTL=86400  # 24 hours

# ================================
# OCR Configuration
# ================================
OCR_ENABLED=true
TESSERACT_PATH=/usr/bin/tesseract

# ================================
# Development Configuration
# ================================
# Set to true to enable development features
DEV_MODE=true
MOCK_LLM_RESPONSES=false
ENABLE_CORS=true